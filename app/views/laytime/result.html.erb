<fieldset class='summary'>
  <li>
  <span class="stitle">Partner </span><%= @report.cp_detail.partner %>
  </li>
  <li>
  <span class="stitle">From/To </span><%= @report.cp_detail.from %> / <%= @report.cp_detail.to %>
  </li>
  <li>
  <span class="stitle">C/P</span> <%= @report.cp_detail.cpName %>
  </li>
</fieldset>

<fieldset class='summary-alt'>
  <div class="summary-heading">Loading at <%= @report.cp_detail.from %></div>
  <%= render :partial => 'report', :locals => {:port_details => @report.loading, :time_available => @report.loading_time_available, :time_used => @report.loading_time_used, :diff => @report.loading_diff, :amt => @report.loading_amt } %>
</fieldset>

<fieldset class='summary'>

  <div class="summary-heading">Discharging at <%= @report.cp_detail.to %></div>
  <%= render :partial => 'report', :locals => {:port_details => @report.discharging, :time_available => @report.discharging_time_available, :time_used => @report.discharging_time_used, :diff => @report.discharging_diff, :amt => @report.discharging_amt } %>
</fieldset>
