.row {
  width: 1000px;
  padding-bottom: 10px;
}

.loc {
  width: 200px;
  margin-left: 10px;
}

.ttc {
  width: 200px;
  margin-left: 10px;
}

.pct {
  width: 50px;
  margin-left: 10px;
}

.rem {
  width: 250px;
  margin-left: 10px;
}

.lab {
    width: 130px;
}

.laba {
    width: 190px;
}

.labc {
    width: 190px;
}

.labd {
    width: 120px;
}

</style>
<h1>Statement of Facts</h1>
<% form_for @facts, :url => { :action => "result" }, :html =>{ :onsubmit => 'return isValidFacts();' } do |f| %>
    <div id="set">
    <div class="row">
        <label class="lab">From</label>
        <label class="laba">To</label>
        <label class="labc">Time To Count</label>
        <label class="labd">Value (%)</label>
        <label class="labe">Remarks </label>
    </div>

    <% @facts.each do |fact| %>
      <% f.fields_for :facts do |fact_form| %>
        <div class="row">
          <script>
          addrow();
          </script>
        </div>
        <% end %>
    <% end %>
    </div>
    <a href="#" onclick="addrow();">add row </a>
    <div id="submit" style="padding-top:30px;">
      <%= f.submit "Calculate", :class => "submit" %>
    </div>
<% end %>
